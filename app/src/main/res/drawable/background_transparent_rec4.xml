<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Semi-opaque Background for Frosted Effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#37FFFFFF" /> <!-- 50% opaque white -->
            <corners android:radius="16dp" /> <!-- Rounded edges -->
        </shape>
    </item>

    <!-- Bright Border to Mimic Light Reflection -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#0DFFFFFF" /> <!-- Brighter border -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Inner Shadow (Subtle depth illusion) -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
