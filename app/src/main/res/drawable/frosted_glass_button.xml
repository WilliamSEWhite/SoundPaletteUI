<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Blur Effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#92FFFFFF" /> <!-- Light transparent white -->
            <corners android:radius="16dp" /> <!-- Rounded corners for smooth look -->
        </shape>
    </item>

    <!-- Border for Glass Effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" /> <!-- Semi-transparent white border -->
        </shape>
    </item>

    <!-- Optional: Shadow for Depth -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
        </shape>
    </item>
</layer-list>
