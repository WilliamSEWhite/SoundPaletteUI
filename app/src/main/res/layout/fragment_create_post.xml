<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Posts.CreatePostFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="4"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="0.2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caption"
                android:layout_gravity="start"
                android:paddingStart="5dp"/>

            <EditText
                android:id="@+id/caption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:hint="Enter your caption"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowWeight="0.2"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:layout_gravity="start"
                android:paddingStart="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/sp_tan"
                android:textColor="@color/white"
                android:text="+"
                android:textSize="@dimen/btn_text_size"
                android:id="@+id/addTags"/>
        </LinearLayout>

            <FrameLayout
                android:id="@+id/postContentShell"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowWeight="0.2"

                />
        <Button
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/btnSave"
            android:text="Post"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorOnSurface"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_rowWeight="0.2"
            />
    </GridLayout>




</LinearLayout>