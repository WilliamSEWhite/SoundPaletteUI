<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/audioFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/background_dark_green">

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/postAudioBackground"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/soundwave"
        android:alpha="0.3"
        app:tint="@color/white"
        android:visibility="visible" />

    <SeekBar
        android:id="@+id/audioSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"/>

    <!-- Play/Pause toggle button -->
    <ImageButton
        android:id="@+id/postAudioPlayPause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_play_circle_filled_24"/>

</LinearLayout>
