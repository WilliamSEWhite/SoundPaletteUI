<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audioFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/colorBackgroundLight">

    <ImageView
        android:id="@+id/postAudioBackground"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/soundwave"
        android:alpha="0.3"
        android:visibility="visible" />

    <SeekBar
        android:id="@+id/audioSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="visible"/>

    <!-- Play/Pause toggle button -->
    <ImageButton
        android:id="@+id/postAudioPlayPause"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="transparent"
        android:src="@drawable/baseline_play_circle_filled_24"/>

</LinearLayout>
