<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="5dp"
        android:background="@drawable/background_transparent_round3"
        android:orientation="horizontal">

        <!-- Poster's Profile -->
        <ImageView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navigation_profile_24"
            android:id="@+id/profilePicture"/>

        <!-- Poster's Username and Comments -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernameDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:textSize="28dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- FOLLOWER COUNT DISPLAY -->
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/followerDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="10000"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Followers"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="10dp"/>
                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/profileButton"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Profile"
                    android:textSize="9dp"
                    android:padding="0dp"
                    android:background="@drawable/background_transparent_rec1"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <CheckBox
                    android:id="@+id/followButton"
                    android:layout_width="60dp"
                    android:layout_height="33dp"
                    android:text="Follow"
                    android:textSize="9dp"
                    android:gravity="center"
                    android:background="@android:drawable/btn_default"
                    android:button="@null"
                    android:textColor="@color/button_default" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/messageButton"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Message"
                    android:textSize="9dp"
                    android:padding="0dp"
                    android:background="@drawable/background_transparent_rec1"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>