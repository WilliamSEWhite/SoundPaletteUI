<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/white_translucency_gradient_create">

        <TextView
            android:id="@+id/mediaContent"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:singleLine="false"
            android:gravity="center|start"
            android:layout_gravity="center"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:textSize="10dp"
            android:hint="Select a file to upload..."
            android:textColor="#BEC0BE"
            android:textColorHint="#BEC0BE"
            android:background="@drawable/background_transparent_rec3"/>

        <ImageButton
            android:id="@+id/mediaButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_upload"
            android:background="@drawable/background_transparent_rec3" />

    </LinearLayout>
</FrameLayout>