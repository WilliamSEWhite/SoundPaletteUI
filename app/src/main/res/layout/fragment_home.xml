<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Home.HomeFragment">

    <!-- filter post buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_filter_toolbar"
        android:orientation="horizontal"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_explore"
                android:layout_width="1000dp"
                android:layout_height="1000dp"
                android:layout_weight="1"
                android:text="EXPLORE"
                android:backgroundTint="@color/button_pressed"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_follower"
                android:layout_width="1000dp"
                android:layout_height="1000dp"
                android:layout_weight="1"
                android:text="FOLLOWERS"
                android:backgroundTint="@color/button_default"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Content area -->
    <FrameLayout
        android:id="@+id/postFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
